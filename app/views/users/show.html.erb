<div class="max-w-4xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <!-- Profile Photo -->
  <div class="flex items-center mb-6">
    <% if @user.profile_photo.attached? %>
      <%= image_tag @user.profile_photo.variant(resize_to_fill: [150, 150]), class: "rounded-full mr-5" %>
    <% end %>

    <%= form_with(model: @user, local: true, url: user_path(@user), method: :patch, multipart: true) do |form| %>
      <div class="mb-4">
        <%= form.label :profile_photo, "Change Profile Photo" %>
       <%= form.file_field :profile_photo %>
      </div>
    <%= form.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>


    <!-- Profile Information -->
    <div>
      <h1 class="text-2xl font-bold"><%= @user.email %></h1>
    </div>
  </div>

  <!-- User's Posts -->
  <h2 class="text-xl font-semibold mb-4 text-gray-800">Posts</h2>
  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <div class="p-6 bg-gray-100 rounded-lg shadow-sm">
          <p class="text-gray-800"><%= post.body %></p>
          <p class="text-sm text-gray-600 mt-2">
            Posted on <%= post.created_at.strftime("%B %d, %Y %I:%M %p") %>
          </p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No posts yet.</p>
  <% end %>
</div>
