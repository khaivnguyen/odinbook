<div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">All Posts</h1>

  <div class="mb-6 text-center">
    <%= link_to 'Create New Post', new_post_path, class: "inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>

  <div class="space-y-6">
    <% @posts.each do |post| %>
      <%= link_to post_path(post), class: "block" do %>
        <div class="bg-gray-50 p-4 rounded-lg shadow hover:shadow-md transition duration-300">
          <p class="text-gray-800 mb-2"><%= truncate(post.body, length: 200) %></p>
          <p class="text-sm text-gray-600">
            Posted by <%= post.user.email %> at <%= post.created_at.strftime("%B %d, %Y %I:%M %p") %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>